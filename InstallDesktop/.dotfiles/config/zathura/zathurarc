set window-title-basename "true"
set selection-clipboard "clipboard"

# Dracula color theme for Zathura
# Swaps Foreground for Background to get a light version if the user prefers

#
# Dracula color theme
#
# statusbar 
#set guioptions none

set statusbar-basename  			  true
set statusbar-home-tilde 				true
set statusbar-page-percent 			true
set statusbar-bg                "#001122" # Background
set statusbar-fg                "#0077aa" # Foreground

set font " monospace normal 12 "

set notification-error-bg       "#ff5555" # Red
set notification-error-fg       "#f8f8f2" # Foreground
set notification-warning-bg     "#ffb86c" # Orange
set notification-warning-fg     "#44475a" # Selection
set notification-bg             "#001122" # Background
set notification-fg             "#00a7ca" # Foreground

set completion-bg               "#001122" # Background
set completion-fg               "#00a7ca" # Comment
set completion-group-bg         "#282a36" # Background
set completion-group-fg         "#6272a4" # Comment
set completion-highlight-bg     "#007477" # Selection
set completion-highlight-fg     "#001122" # Foreground

set index-bg                    "#282a36" # Background
set index-fg                    "#f8f8f2" # Foreground
set index-active-bg             "#44475a" # Current Line
set index-active-fg             "#f8f8f2" # Foreground

set inputbar-bg                 "#001015" # Background
set inputbar-fg                 "#00a6a3" # Foreground

set highlight-color             "#000000" # Orange
set highlight-active-color      "#aaaaaa" # Pink

set default-bg                  "#050505" # Background
set default-fg                  "#f8f8f2" # Foreground

set render-loading              false
set render-loading-fg           "#282a36" # Background
set render-loading-bg           "#f8f8f2" # Foreground

# Recolor mode settings
#

set recolor-lightcolor          "#001015" # Background
set recolor-darkcolor           "#00a6a3" # Foreground

#
# Startup options
#
set adjust-open width
set recolor true
